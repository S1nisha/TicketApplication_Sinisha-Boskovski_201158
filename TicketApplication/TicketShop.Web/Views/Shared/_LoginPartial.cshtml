@using Microsoft.AspNetCore.Identity
@inject SignInManager<TicketShop.Domain.Identity.TicketApplicationUser> SignInManager
@inject UserManager<TicketShop.Domain.Identity.TicketApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    @if (User.IsInRole("Admin"))
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-action="Index" asp-controller="UserRoles" title="Manage">Edit</a>
            </li>
        }
        <li class="nav-item">
        <a  class="nav-link text-dark" asp-are="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
    </li>

        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="ShoppingCart" asp-action="Index">My Cart</a>
        </li>
    
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-action="Register" asp-controller="Account">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-action="Login" asp-controller="Account">Login</a>
    </li>
}
</ul>
